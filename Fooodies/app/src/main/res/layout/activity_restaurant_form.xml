<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.pulkitpahwa.fooodies.RestaurantForm"
    android:background="#6a1815">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_restaurant_id"
        android:autoText="true"
        android:textColor="#fff"
        android:textAlignment="center"
        android:password="false"
        android:phoneNumber="true"
        android:gravity="center|center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/textView30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Restaurant Id"
        android:id="@+id/textView10"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        android:layout_above="@+id/input_restaurant_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button7"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:backgroundTintMode="src_over"
        android:clickable="true"
        android:onClick="submit_restaurant_id"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="104dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Table number"
        android:id="@+id/textView30"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        android:layout_above="@+id/input_table_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_table_id"
        android:autoText="true"
        android:textColor="#fff"
        android:textAlignment="center"
        android:password="false"
        android:phoneNumber="true"
        android:gravity="center|center_horizontal"
        android:layout_above="@+id/button7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Invalid Restaurant Id or Table Number"
        android:id="@+id/errorlocal"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
